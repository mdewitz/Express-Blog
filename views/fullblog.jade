  meta(charset="UTF-8")
body
  div.background
    div.logowrapper
      div.logo Horray
       div.picturewrapper
        img(src='http://cdn.c.photoshelter.com/img-get/I0000iAuAcJVVu34/s/750/chinatown-san-francisco-17-casanf77640....')
    section.form_container
      form(action = "/blog/#{blogs._id}?_method=PUT", method = "POST")
        fieldset
          div.date
            label(for="date") Date:
            input.date(type = "text", name = "date", placehoder ="date" value = new Date())
          div.title
            label(for="title") Title:
            input.title(type = "text", name = "title", placehoder ="title" value = blogs.title)
          div.author
            label(for="author") Author
            input.author(type = "text", name = "author", placehoder ="author" value = blogs.author)
          div.body
            lable(for="body") Content
            input.body(type = "text", name = "body", placehoder ="body" value = blogs.content)
          button.update(type="submit") Update
    div.footer
      ul
        li
          a(href='/') back
        li
          a(href='/') nextâ€‚

