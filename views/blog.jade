doctype
html
head
  meta(charset="UTF-8")
  link(rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.4.1/slick.css")
  link(rel="stylesheet" href="/styles/_reset.css")
  link(rel="stylesheet" href="/styles/styles.css")
  title Hooray
body
  h1 Hooray
  form.blog_login(action='/login', method='post')
    button.blog_login_button Sign in
  section.blog_posts
    ul
      each item in blogs
        li.item
          ul
            div.slideshow
              div
                img(src='http://media.giphy.com/media/wnQCTCJivWuXu/giphy.gif')
              div
                img(src='http://media.giphy.com/media/yQanUKoywzYPe/giphy.gif')
              div
                img(src='http://media1.giphy.com/media/fq5yiYcnmColW/giphy.gif')
              //- div
              //-   img(src='../assets/image-4.jpg')
          div.post
            button.next <
            button.prev >
            div.sneakPeek
              div.blog_date
                !=item.date
              div.blog_author
                != item.author
              div.blog_title
                != item.title
              div.blog_content
                != item.description
              form(action="/blog/#{item._id}", method="post")
                  button.read_more(type="submit") Read More
script(type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js") 
