doctype
html
head
  meta(charset="UTF-8")
  link(rel="stylesheet", href="/styles/styles.css")
  title Hooray
body
  h1 Hooray
  div.all
    section.form_container
      form(action ="/blog", method = "POST" )
        fieldset
          div.title_container
            input( type = "text", name = "title", placeholder = "New to-do", size='0')
            button.send +
          div.content_container
            textarea( type = "text", name = "body", placeholder = "Notes" cols='20' rows='5')
    section.toDoList_container
      ul
        each item in blogs
          li.item
            div.image
              button.next(type="submit") <
              button.prev(type="submit") >
            div.title
              != item.title
            div.content
              != item.content
            form(action ="/blog/#{item._id}", method = "get")
              button.update(type="submit") Update
            form(action="/blog/#{item._id}?_method=DELETE", method="post")
              button.delete(type="submit") X
script(type="text/javascript" src="http://code.jquery.com/jquery-1.10.2.min.js")
script(src="/js/blog.js")
