        div.date_edit
          label(for="date") Date:
          input.date(type = "text", name = "date", placeholder ="date" value = new Date())
        div.title_edit
          label(for="title") Title:
          input.title(type = "text", name = "title", placeholder ="title" value = blogs.title)
        div.author_edit
          label(for="author") Author:
          input.author(type = "text", name = "author", placeholder ="author" value = blogs.author)
        div.body_edit
          label(for="body") Content: 
          textarea.body(type = "text", name = "body", placeholder ="body" value = blogs.content cols='20' rows='5')
        button.update_button(type="submit") Update
